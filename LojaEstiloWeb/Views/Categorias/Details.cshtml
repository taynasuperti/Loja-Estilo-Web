
@model LojaEstiloWeb.Models.Categoria
@{
    ViewData["Title"] = "Categorias";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="my-4">CATEGORIA</h1>
<h4 class="mb-4">Inclusão</h4>

<div class="card my-4 border-dark border-2 rounded-2">
    <div class="card-body">
        <div class="row">
            <div class="col-md-8 col-lg-10">
                <div class="mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control p-2 border-dark border-2 rounded-2" readonly>
                </div>
            </div>
            <div class="col-md-4 col-lg-2">
                <label class="form-label">Prévia</label>
                <img src='@(Model.Foto ?? @Url.Content("~/img/produto-sem-imagem.jpg"))' id="Preview" class="img-fluid">
            </div>
        </div>
        <div class="d-flex mt-4">
            <a asp-action="Edit" class="btn btn-outiline-warning me-2">
                <i class="fas fa-edit me-1"></i> Alterar
            </a>
            <a asp-action="Index" class="btn btn-outiline-info">
                <i class="fas fa-home me-1"></i> Voltar
            </a>
        </div>
    </div>
</div>
